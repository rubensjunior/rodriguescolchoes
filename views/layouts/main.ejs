<body is="dmx-app" id="main">

  <header class="bg-primary py-2">
    <div class="container">
      <div class="row align-items-center">
        <div class="col">
          <h6 class="text-center text-white m-0">Plataforma de Gestão Integrada - Rodrigues Colchões.</h6>
        </div>
      </div>
    </div>
  </header>
  <header>
    <nav class="navbar navbar-expand-md navbar-light bg-white">
      <div class="container">
        <!-- Logo/Brand -->
        <a class="navbar-brand" href="/">
          <img src="/assets/images/LOGO COLORIDO.png" alt="Rodrigues Colchões" class="navbar-logo">
