        </button>

        <!-- Collapsible Content -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Action Buttons -->
          <div class="navbar-nav ms-auto">
            <div class="nav-item me-2">
              <a href="/f/criar-conta" class="btn btn-outline-primary" internal="true">Cadastrar</a>
            </div>
            <div class="nav-item">
              <a href="/f/login" class="btn btn-primary">Entrar</a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <main is="dmx-view" id="content">
    <%- await include(content, locals); %>
