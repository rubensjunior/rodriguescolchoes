<!doctype html>
<html lang="pt-br">

<head>
  <base href="/">
  <script src="/dmxAppConnect/dmxAppConnect.js"></script>
  <meta charset="UTF-8">
  <title>Portaria</title>

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/bootstrap/5/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/dmxAppConnect/dmxRouting/dmxRouting.js" defer></script>
  <script src="/dmxAppConnect/dmxBootstrap5Alert/dmxBootstrap5Alert.js" defer></script>
  <link rel="stylesheet" href="/dmxAppConnect/dmxNotifications/dmxNotifications.css" />
  <script src="/dmxAppConnect/dmxNotifications/dmxNotifications.js" defer></script>
  <script src="/dmxAppConnect/dmxBrowser/dmxBrowser.js" defer></script>
  <script src="/dmxAppConnect/dmxBootstrap5Offcanvas/dmxBootstrap5Offcanvas.js" defer></script>
</head>

<body is="dmx-app" id="mobileportaria">

  <div is="dmx-browser" id="navegacao"></div>
  <dmx-notifications id="notificacao"></dmx-notifications>
  <dmx-serverconnect id="usuario_logado" url="/api/colaborador/identificar-colaborador"></dmx-serverconnect>
  <header class="bg-primary py-3 mb-3">
    <div class="container">
      <div class="row align-items-center">
        <div class="col align-self-center">
          <img src="/assets/images/LOGO BRANCO.png" class="img-fluid" width="96">
        </div>
        <div class="col align-self-center">
          <div class="d-flex justify-content-end">
            <div class="dropdown">
              <button id="menu_mobile" class="btn dropdown-toggle btn-sm btn-outline-light" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-bars fa-lg"></i></button>
              <div class="dropdown-menu" aria-labelledby="dropdown1">
                <a class="dropdown-item" href="#">Adicionar veículo</a>
                <a class="dropdown-item" href="#">Motoristas autorizados</a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </header>
  <main is="dmx-view" id="content">
    <%- await include(content, locals); %>
  </main>
  <footer class="bg-light py-3 mb-3">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col align-self-center text-center">
          <h6 class="m-0">Desenvolvido por DTI - Rodrigues Colchões.</h6>
        </div>
      </div>
    </div>
  </footer>
  <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>